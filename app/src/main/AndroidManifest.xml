<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.manitowocfoodservice.lincolnovencapacitycalculator">
	<!-- TODO: Change the launcher to look better with theme colors -->
	<application
			android:allowBackup="true"
			android:icon="@mipmap/app_icon"
			android:logo="@mipmap/app_logo"
			android:label="@string/app_name"
			android:theme="@style/AppTheme">
		<activity
				android:name=".MainMenu"
				android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
				android:name=".CapacityCalculatorActivity"
				android:label="@string/title_activity_capacity_calculator">
		</activity>
		<activity
				android:name=".SpecSheetLinks"
				android:label="@string/title_activity_spec_sheet_links">
		</activity>
		<activity
				android:name=".OvenComparison"
				android:label="@string/title_activity_oven_comparison">
		</activity>
	</application>

</manifest>
