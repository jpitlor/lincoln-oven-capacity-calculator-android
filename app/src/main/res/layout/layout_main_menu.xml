<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".Calculator">

	<ImageView
			android:id="@id/manitowoc_logo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="15dp"
			android:contentDescription="@string/logo_description"
			android:src="@drawable/manitowocfoodservicelogo"/>

	<Button
			android:id="@id/capacity_calculator_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_above="@id/oven_comparison_button"
			android:layout_centerHorizontal="true"
			android:padding="20dp"
			android:text="@string/capacity_calculator_button"
			android:textSize="18sp"
			android:onClick="goToCalculator" />

	<Button
			android:id="@id/oven_comparison_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:padding="20dp"
			android:text="@string/oven_comparison_button"
			android:textSize="18sp"/>

	<Button
			android:id="@id/spec_sheet_link_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/oven_comparison_button"
			android:layout_centerHorizontal="true"
			android:padding="20dp"
			android:text="@string/spec_sheet_links_button"
			android:textSize="18sp"
			android:onClick="goToSpecSheets" />
</RelativeLayout>
